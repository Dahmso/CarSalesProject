@model CarSalesData.Personne

@{
    
    ViewBag.Title = "Compte";
}

<div class="jumbotron">
    <h1>@ViewBag.Title : @Model.Prenom @Model.Nom</h1>
</div>

<div class="container">
    @{ 
        string[] fonctions = { "Location", "Vente", "Gestion de véhicule", "Entretien", "Plein", "Administrateur" };

        foreach (string fonction in fonctions)
        {
         <div class="container">
                <button style="width:150px; padding:10px;margin-bottom:15px" class="btn btn-default center-block" type="button" id='@("Id" + fonction)'
                 onclick="location.href='@Url.Action("Index" + fonction, "Account")'">@fonction</button>
        </div>
        }
    }
    </div>



